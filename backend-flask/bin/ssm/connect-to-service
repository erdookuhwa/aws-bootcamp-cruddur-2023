#! /usr/bin/bash

if [ -z "$1" ]; then
    echo "No TASK_ID given. e.g. ./bin/ecs/connect-to-service 7dd70843535f45f4b409f90a78602ca3 backend-flask"
    exit 1
fi
TASK_ID=$1

if [ -z "$2" ]; then
    echo "No CONTAINER_NAME given. e.g. ./bin/ecs/connect-to-service 7dd70843535f45f4b409f90a78602ca3 backend-flask"
    exit 1
fi
CONTAINER_NAME=$2


aws ecs execute-command  \
    --region $AWS_DEFAULT_REGION \
    --cluster cruddur \
    --task $TASK_ID \
    --container $CONTAINER_NAME \
    --command "/bin/bash" \
    --interactive