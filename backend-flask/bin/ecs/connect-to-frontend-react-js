#! /usr/bin/bash

if [ -z "$1" ]; then
    echo "No TASK_ID given. e.g. ./bin/ecs/connect-to-frontend-react-js 7dd70843535f45f4b409f90a78602ca3"
    exit 1
fi

TASK_ID=$1
CONTAINER_NAME=frontend-react-js


aws ecs execute-command  \
    --region $AWS_DEFAULT_REGION \
    --cluster cruddur \
    --task $TASK_ID \
    --container $CONTAINER_NAME \
    --command "/bin/sh" \
    --interactive